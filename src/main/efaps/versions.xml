<install xmlns="http://www.efaps.org/xsd"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.efaps.org/xsd http://www.efaps.org/xsd/eFaps_1.0.xsd">
    <application>eFapsLocalizations-Ubicaciones</application>

    <dependencies>
        <dependency order="0">
            <groupId>org.efaps</groupId>
            <artifactId>efaps-kernel-install</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency order="1">
            <groupId>org.efaps</groupId>
            <artifactId>efaps-webapp-install</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency order="2">
            <groupId>org.efaps.apps</groupId>
            <artifactId>contacts</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
    </dependencies>

    <version number="1" login="true" reloadCache="true">
        <description>Install Data Model and UI.</description>
        <script type="groovy">
            import org.efaps.admin.runlevel.RunLevel;
            import org.efaps.db.Context;
            import org.efaps.db.SearchQuery;
            import org.efaps.esjp.admin.ui.UIUpdate;
            import org.efaps.importer.DataImport;

            import java.net.URL
            import java.io.File;

            EFAPS_LOGGER.info("Importing Data for eFapsLocalizations Basic Modul;");

            SearchQuery query = new SearchQuery();
            query.setQueryTypes("Ubicaciones_UbicacionStandardRoot");
            query.addWhereExprEqValue("Name", "Lima");
            query.addSelect("OID");
            query.execute();
            if (!query.next()) {
                RunLevel.init("shell");
                RunLevel.execute();

                URL url1 = new URL(EFAPS_ROOTURL, "Data/IMPORT_Lima.xml");
                DataImport imp1 = DataImport.readFile(url1);
                imp1.updateInDB();
            }

            UIUpdate update = new UIUpdate();

             <!-- Ubicaciones_UbicacionMyDesk , ERP_AttributeAbstractMyDesk -->
            update.add2Menu("b1a580bd-c4a3-4d06-9b98-2e3b62e06254", "9427d507-4793-4751-83e8-f08dbf2df55d", 1);
        </script>
    </version>
</install>
